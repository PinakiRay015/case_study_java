<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/homeIcon"
      android:src="@drawable/homeicon"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="15px"
      android:layout_marginRight="15px"
      >
  </ImageView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:text="@string/about1"
      android:textStyle="bold"
      android:textSize="24dp"
      android:textColor="@color/black"
      android:layout_marginRight="10dp"
      android:layout_marginTop="20dp"
      android:id="@+id/about1"
      >

  </TextView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/about1"
      android:text="@string/about2"
      android:textStyle="bold"
      android:textSize="24dp"
      android:textColor="@color/black"
      android:layout_marginRight="10dp"
      android:layout_marginTop="2dp"
      android:id="@+id/about2"
      >

  </TextView>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/about2"
      android:text="@string/about3"
      android:textSize="22dp"
      android:textColor="@color/black"
      android:layout_marginRight="5dp"
      android:layout_marginTop="40dp"
      android:id="@+id/about3"
      >

  </TextView>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/about2"
      android:text="@string/about4"
      android:textStyle="bold"
      android:textSize="38dp"
      android:textColor="@color/black"
      android:layout_marginRight="10dp"
      android:layout_marginTop="310dp"
      android:id="@+id/about4"
      >

  </TextView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/about4"
      android:text="@string/about5"
      android:textSize="22dp"
      android:textColor="@color/black"
      android:layout_marginRight="10dp"
      android:layout_marginTop="2dp"
      android:id="@+id/about5"
      >

  </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>